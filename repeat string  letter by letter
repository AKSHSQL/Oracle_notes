 create or replace procedure rep_str (str1 in varchar2)
is
str varchar2(1000);
len number;
begin
len :=length(str1);
 for i in 1..len loop
 for j in 1..i loop
 str:=substr(str1,1,i);
 end loop;
 dbms_output.put_line(str);
 str:=null;
 end loop;
 end rep_str;
 
 
 create or replace procedure rep_str (str1 in varchar2)
is
str varchar2(1000);
len number;
begin
   len := length(str1);
   for i in 1..len loop
    for j in 1..i loop
    str:=substr(str1,1,i);
    end loop;
    dbms_output.put_line(str);
    end loop;
    str:=null;
     
     len := length(str1);
   for i in reverse 1..len loop
    for j in 1..i loop
    str:=substr(str1,1,i);
    end loop;
    dbms_output.put_line(str);
    end loop;
    str:=null;
end rep_str;
